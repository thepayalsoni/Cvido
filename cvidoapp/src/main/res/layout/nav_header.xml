<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_slider_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginRight="10dip">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avtar_box2" />

        <com.akslibrary.view.CircularImageView
            android:id="@+id/imgProfileUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dip"
            android:src="@drawable/no_image" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPANY NAME"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/lblProfileDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Developer with 4+ experience"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/darker_gray" />

        <com.akslibrary.view.TypefacedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="3dip"
            android:text="Australia"
            android:textColor="@color/color_title_bg" />


        <com.akslibrary.view.TypefacedTextView
            android:id="@+id/lblProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="akshay@gmail.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/color_title_bg" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCompanyCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center"
        android:orientation="vertical">

        <com.akslibrary.view.SquareLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_orange"
            android:padding="10dip">

            <TextView
                android:id="@+id/lblProfileCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500" />
        </com.akslibrary.view.SquareLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="CREDITS"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</LinearLayout>